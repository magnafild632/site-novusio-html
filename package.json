{
  "name": "site-novusio-react",
  "version": "2.0.0",
  "description": "Site Novusio com React + painel administrativo",
  "main": "server/server.js",
  "scripts": {
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "init-db": "node server/init-database.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "build": "npm run client:build",
    "start": "npm run build && npm run server",
    "install:all": "npm install && npm run client:install"
  },
  "keywords": [
    "novusio",
    "admin",
    "cms",
    "react",
    "paraguay"
  ],
  "author": "Novusio Paraguay",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
